---
import Icon from "./Icon.astro";
---

<button id="topBtn" class="toTop"><Icon icon="up" size="1.33em" /></button>

<script>
  // Get the button:
  const backToTop = document.getElementById("topBtn");

  backToTop?.addEventListener("click", topFunction);

  // When the user scrolls down 20px from the top of the document, show the button
  document.body.addEventListener("scroll", scrollFunction);

  function scrollFunction() {
    if (!backToTop) return;
    if (
      document.body.scrollTop > 20 ||
      document.documentElement.scrollTop > 20
    ) {
      backToTop.style.display = "block";
    } else {
      backToTop.style.display = "none";
    }
  }

  // When the user clicks on the button, scroll to the top of the document
  function topFunction() {
    document.body.scrollTop = 0; // For Safari
    document.documentElement.scrollTop = 0; // For Chrome, Firefox, IE and Opera
  }
</script>

<style>
  .toTop {
    position: fixed;
    bottom: 20px;
    right: 30px;
    z-index: 99;
    border: none;
    outline: none;
    background-color: var(--color-bg);
    color: var(--color-text);
    cursor: pointer;
    padding: 15px;
    border-radius: 10px;
  }
</style>
