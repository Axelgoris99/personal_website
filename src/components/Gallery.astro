---
import type { CollectionEntry } from "astro:content";

interface Props {
  projects: CollectionEntry<"render">[];
  folder: string;
}

const projects = Astro.props.projects;
const folder = Astro.props.folder;
---

<div class="gallery">
  {
    projects.map((project) => (
      <a class="card" href={`/${folder}/${project.slug}`}>
        <span class="title">{project.data.title}</span>
        {project.data.favorite && <span class="favorite">‚ù§Ô∏è</span>}
        <span class="number">{(project.data.imgs && project.data.imgs.length + 1 ) || 1}</span>
        {project.data.video && <span class="video">üé•</span>}
        <img
          src={project.data.img}
          alt={project.data.img_alt || ""}
          loading="lazy"
          decoding="async"
        />
      </a>
    ))
  }
</div>

<style>
  .gallery {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    grid-gap: 1rem;
    grid-auto-flow: dense;
  }

  .card {
    display: grid;
    grid-template: auto 1fr / auto 1fr;
    background: var(--gradient-subtle);
    border: 1px solid var(--gray-800);
    border-radius: 0.75rem;
    overflow: hidden;
    //box-shadow: var(--shadow-sm);
    text-decoration: none;
    font-family: var(--font-brand);
    font-size: var(--text-lg);
    font-weight: 500;
    transition: box-shadow var(--theme-transition);
    position: relative;
    box-shadow: inset 0px 0px 100px 100px #DBA632;
  }
  img {
    grid-area: 1 / 1 / 3 / 3;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .card:hover {
    box-shadow: var(--shadow-md);
  }

  .favorite {
    position: absolute;
    bottom: 0.5rem;
    left: 0.5rem;
    margin: 0.1rem;
    padding: 0.1rem 0.2rem;
    background: var(--gray-999);
    color: var(--gray-200);
    border-radius: 0.375rem;
    transition: transform 0.3s ease-in-out;
  }
  .favorite:hover {
    transform: scale(1.2);
  }

  .number {
    position: absolute;
    bottom: 0.5rem;
    right: 0.5rem;
    margin: 0.1rem;
    padding: 0.1rem 0.5rem;
    background: var(--gray-999);
    color: var(--gray-200);
    border-radius: 0.375rem;
    transition: transform 0.3s ease-in-out;
  }
  .number:hover {
    transform: scale(1.2);
  }
  .video{
    position: absolute;
    top: 0.5rem;
    right: 0.5rem;
    margin: 0.1rem;
    padding: 0.1rem 0.5rem;
    background: var(--gray-999);
    color: var(--gray-200);
    border-radius: 0.375rem;
    transition: transform 0.3s ease-in-out;
  }
  
  .title {
    grid-area: 1 / 1 / 2 / 2;
    z-index: 1;
    margin: 0.5rem;
    padding: 0.5rem 1rem;
    background: var(--gray-999);
    color: var(--gray-200);
    border-radius: 0.375rem;
  }

  @media (min-width: 50em) {
    .card {
      //height: 22rem;
      border-radius: 1.5rem;
    }

    .title {
      border-radius: 0.9375rem;
    }
    
    .favorite {
      border-radius: 0.9375rem;
    }
  }
</style>
